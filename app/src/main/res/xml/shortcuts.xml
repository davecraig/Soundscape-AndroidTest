<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shortcuts bound to the start exercise intent -->
    <shortcut
        android:shortcutId="following"
        android:shortcutShortLabel="@string/following">
        <capability-binding android:key="actions.intent.START_EXERCISE">
            <parameter-binding
                android:key="exercise.name"
                android:value="Following"/>
        </capability-binding>
    </shortcut>
    <capability android:name="actions.intent.START_EXERCISE">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="org.scottishtecharmy.soundscape"
            android:targetClass="org.scottishtecharmy.soundscape.MainActivity">
            <parameter android:name="exercise.name" android:key="exerciseType" />
            <url-template android:value="soundscape://exercise.name/{exerciseType}"/>
        </intent>
    </capability>
</shortcuts>